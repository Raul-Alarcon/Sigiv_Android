<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:background="?attr/primaryBackground"
    android:id="@+id/item">

    <TextView
        android:id="@+id/itemTaskDateText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/secondaryButton"
        android:gravity="center"
        android:lineSpacingExtra="2.5dp"
        android:textAllCaps="true"
        android:textColor="?attr/primaryBackground"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.17"
        tools:text="THU\nJUN 30" />

    <!--Colored view divider-->
    <View
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="?attr/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/itemTaskDateText"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/itemTaskDepartureLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/itemTaskDateText"
        app:layout_constraintDimensionRatio="W,5:1"
        app:layout_constraintStart_toEndOf="@id/itemTaskDateText"
        app:layout_constraintTop_toTopOf="@id/itemTaskDateText"
        android:padding="5dp">

        <TextView
            android:fontFamily="sans-serif-black"
            android:id="@+id/itemTopicText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/primaryTextColor"
            android:textSize="16sp"
            tools:text="@string/txt_topic_event_item" />

        <TextView
            android:fontFamily="sans-serif-light"
            android:id="@+id/itemTaskText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/primaryTextColor"
            android:textSize="16sp"
            tools:text="@string/txt_task_event_item" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>