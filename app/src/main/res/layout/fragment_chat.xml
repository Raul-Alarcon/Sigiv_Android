<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Message from Taylor Brooks -->
    <TextView
        android:id="@+id/taylorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#E8E8E8"
        android:background="@drawable/rounded_background"
        android:padding="12dp"
        tools:text="@alicnors Take a look at the Flow.collectAsStateWithLifecycle() APIs. You can use all the same stuff."
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Sticker Image -->
    <ImageView
        android:id="@+id/stickerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Thank You Sticker"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toBottomOf="@id/taylorMessage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"/>

    <!-- User Message -->
    <TextView
        android:id="@+id/userMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4F67FF"
        android:background="@drawable/rounded_background"
        android:padding="12dp"
        tools:text="Thank you!"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/stickerImage"
        app:layout_constraintStart_toStartOf="@id/stickerImage"
        android:layout_marginTop="8dp"/>

    <!-- Check it out message -->
    <TextView
        android:id="@+id/checkItOutMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4F67FF"
        android:background="@drawable/rounded_background"
        android:padding="12dp"
        android:text="Check it out!"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/userMessage"
        app:layout_constraintStart_toStartOf="@id/userMessage"
        android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>