<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.views.login.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src= "@drawable/ic_launcher_foreground"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            />

        <ImageView
        android:id="@+id/img_illustration"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
            android:src= "@drawable/img_scrum"/>

    <!-- Texto de bienvenida -->
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text= "Bienvenido/a"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="?attr/primaryTextColor" />

    <!-- SubtÃ­tulo -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text= "Crear una cuenta y acceder"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="?attr/primaryTextColor" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login_google"
            android:layout_width="204dp"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:backgroundTint="?attr/primaryButtonVariant"
            android:padding="12dp"
            android:text="@string/txt_btn_google"
            android:textSize="18sp"
            app:cornerRadius="50dp"
            app:icon="@drawable/ic_google"
            app:iconGravity="textStart"
            app:iconPadding="10dp" />


    </LinearLayout>

</FrameLayout>