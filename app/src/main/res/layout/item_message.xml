        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/other_message_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- User Name -->
                <TextView
                    android:id="@+id/other_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Taylor Brooks"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <!-- Time Text -->
                <TextView
                    android:id="@+id/other_user_time_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="8:05 PM"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_marginHorizontal="8dp" />


            </LinearLayout>

            <!-- Message Bubble -->
            <TextView
                android:id="@+id/other_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_background"
                android:padding="12dp"
                tools:text="alicnors Take a look at the Flow.collectAsStateWithLifecycle() "
                android:textSize="14sp"
                android:backgroundTint="#E8E8E8"
                android:textColor="#333333"/>

        </LinearLayout>


    </LinearLayout>

