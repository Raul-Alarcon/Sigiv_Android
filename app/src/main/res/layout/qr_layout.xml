<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:id="@+id/qr_code_container">

        <!-- Title and Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_info_qr"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/primaryTextColor"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_scan"
            android:textSize="16sp"
            android:textColor="?attr/secondaryTextColor"
            android:layout_marginBottom="32dp"/>

        <!-- QR Code Image -->
        <ImageView
            android:id="@+id/qr_code_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"/>

        <!-- Divider with Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?attr/secondaryTextColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_code_manually"
                android:textColor="?attr/secondaryTextColor"
                android:textSize="14sp"
                android:layout_marginHorizontal="16dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?attr/secondaryTextColor"/>
        </LinearLayout>

        <!-- Code Input Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/code_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_group_code"
                    android:paddingHorizontal="16dp"
                    android:inputType="text"
                    android:layout_marginEnd="8dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/copy_button"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:contentDescription="Copiar texto"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_portapapeles1" />

        </LinearLayout>

        <!-- Verify Button -->
