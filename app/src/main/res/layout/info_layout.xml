<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/info_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp">

            <!-- Community Icon -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/group_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/common_google_signin_btn_icon_dark"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircularShape"/>

            <!-- Members Icons Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/member_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+4k"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp"/>

                <!-- Member profile pictures would be added dynamically -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/common_google_signin_btn_icon_dark"
                    app:shapeAppearanceOverlay="@style/CircularShape"/>

            </LinearLayout>
        </RelativeLayout>

        <!-- Community Info -->
        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NYC Coders"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/group_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We are a community of developers prepping for coding interviews, partic..."
            android:textSize="14sp"
            android:textColor="?attr/secondaryTextColor"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp"/>

        <!-- Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_like"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_notifications_black_24dp"
                android:contentDescription="asdasd"
                app:iconGravity="textStart"
                app:iconPadding="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_exit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_info_exit"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_info_delete" />
        </LinearLayout>

</LinearLayout>