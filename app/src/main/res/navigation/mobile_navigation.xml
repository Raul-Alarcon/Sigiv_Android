<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.planme.ui.views.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action android:id="@+id/navigation_home_to_navigation_chat"
            app:destination="@+id/navigation_chat"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_task"
        android:name="com.example.planme.ui.views.task.TaskFragment"
        android:label="@string/txt_nav_bottom_task"
        tools:layout="@layout/fragment_task" />

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.example.planme.ui.views.calendar.CalendarFragment"
        android:label="@string/txt_nav_bottom_calendar"
        tools:layout="@layout/fragment_calendar" />

    <fragment
        android:id="@+id/navigation_me"
        android:name="com.example.planme.ui.views.me.MeFragment"
        android:label="@string/title_page_me"
        tools:layout="@layout/fragment_me" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.planme.ui.views.chat.ChatFragment"
        android:label="@string/title_page_chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.planme.ui.views.login.LoginFragment"
        android:label="@string/title_page_login"
        tools:layout="@layout/fragment_login" />

</navigation>